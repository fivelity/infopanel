<Window
    x:Class="InfoPanel.Views.DisplayWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:app="using:InfoPanel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:InfoPanel.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:skia="using:SkiaSharp.Views.Windows"
    Title="DisplayWindow"
    mc:Ignorable="d">
    <!-- WinUI 3 window styling handled via AppWindow APIs in code-behind -->
    <Grid x:Name="RootGrid" 
          Background="Transparent"
          KeyUp="Window_KeyUp"
          PointerPressed="Window_PointerPressed"
          PointerMoved="Window_PointerMoved"
          PointerReleased="Window_PointerReleased">
        <Canvas x:Name="SkiaContainer">
            <!-- SkiaSharp canvas - size set in code-behind -->
            <skia:SKXamlCanvas x:Name="skElement"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                PaintSurface="SkElement_PaintSurface" />
        </Canvas>
    </Grid>
    <!-- TODO: Implement OpenGL equivalent for WinUI 3 using SKSwapChainPanel when available -->
</Window>
