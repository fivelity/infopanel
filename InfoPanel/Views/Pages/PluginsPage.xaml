<Page
    x:Class="InfoPanel.Views.Pages.PluginsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:InfoPanel"
    d:DesignHeight="650"
    d:DesignWidth="800"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel MaxWidth="1360" Margin="20,20,20,20" Spacing="10">
            <!-- Plugin Framework Info -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <SymbolIcon Symbol="AllApps" Grid.Column="0" Margin="0,0,12,0" VerticalAlignment="Top" />
                    <StackPanel Grid.Column="1">
                        <TextBlock FontSize="13" FontWeight="SemiBold" Text="Plugin Framework" />
                        <TextBlock Margin="0,5,0,0" FontSize="12" Foreground="Orange" TextWrapping="Wrap">
                            <Run FontWeight="Bold">Warning!</Run>
                            <Run Text=" Plugins run under the same privileges as InfoPanel (Administrator). Do not load untrusted plugins." />
                        </TextBlock>
                        <TextBlock Margin="0,5,0,0" FontSize="12" Opacity="0.7" TextWrapping="Wrap" Text="Visit our Github and reference InfoPanel.Extras project for plugin development guidelines." />
                    </StackPanel>
                    <HyperlinkButton Grid.Column="2" Content="Open Plugins Folder" Click="OpenPluginsFolder_Click" VerticalAlignment="Center" />
                </Grid>
            </Border>

            <!-- Restart Banner -->
            <Border x:Name="BorderRestartBanner" Background="#FF9800" CornerRadius="8" Padding="16" Visibility="Collapsed">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <SymbolIcon Symbol="Important" />
                    <TextBlock Text="InfoPanel needs to be restarted to apply your changes." VerticalAlignment="Center" />
                </StackPanel>
            </Border>

            <!-- Bundled Plugins Section -->
            <TextBlock Text="Bundled Plugins" FontSize="14" FontWeight="SemiBold" Margin="0,30,0,10" />
            <ItemsRepeater x:Name="RepeaterBundledPlugins">
                <ItemsRepeater.Layout>
                    <StackLayout Spacing="10" />
                </ItemsRepeater.Layout>
                <ItemsRepeater.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock FontSize="13" FontWeight="SemiBold" Text="{Binding Name}" />
                                    <TextBlock FontSize="12" Opacity="0.7" Text="{Binding Description}" TextWrapping="Wrap" />
                                    <TextBlock FontSize="11" Opacity="0.5" Text="{Binding Version}" />
                                </StackPanel>
                                <ToggleSwitch Grid.Column="1" IsOn="{Binding IsEnabled, Mode=TwoWay}" VerticalAlignment="Center" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>

            <!-- User Plugins Section -->
            <Grid Margin="0,30,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="User Plugins" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center" />
                <Button Grid.Column="1" Content="Import Plugin" Click="ImportPlugin_Click" />
            </Grid>
            <ItemsRepeater x:Name="RepeaterExternalPlugins">
                <ItemsRepeater.Layout>
                    <StackLayout Spacing="10" />
                </ItemsRepeater.Layout>
                <ItemsRepeater.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock FontSize="13" FontWeight="SemiBold" Text="{Binding Name}" />
                                    <TextBlock FontSize="12" Opacity="0.7" Text="{Binding Description}" TextWrapping="Wrap" />
                                    <TextBlock FontSize="11" Opacity="0.5" Text="{Binding Version}" />
                                </StackPanel>
                                <ToggleSwitch Grid.Column="1" IsOn="{Binding IsEnabled, Mode=TwoWay}" VerticalAlignment="Center" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>

            <!-- Empty state -->
            <Border x:Name="BorderNoUserPlugins" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="20">
                <TextBlock Text="No user plugins installed. Click 'Import Plugin' to add one." HorizontalAlignment="Center" Opacity="0.7" />
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
