<Page
    x:Class="InfoPanel.Views.Pages.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:InfoPanel"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel MaxWidth="1360" Margin="20,20,20,20" Spacing="10">
            <!-- Version Info Card -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <SymbolIcon Symbol="Document" Grid.Column="0" Margin="0,0,12,0" />
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock FontSize="13" FontWeight="SemiBold" Text="{x:Bind ViewModel.Version, Mode=OneWay}" />
                        <TextBlock FontSize="12" Opacity="0.7" Text="GNU General Public License v3.0. Copyright 2024 Habib Rehman." />
                    </StackPanel>
                    <HyperlinkButton Grid.Column="2" Content="Github" NavigateUri="https://github.com/habibrehmansg/infopanel" />
                </Grid>
            </Border>

            <!-- Info Links -->
            <ItemsRepeater ItemsSource="{x:Bind ViewModel.InfoLinks, Mode=OneWay}">
                <ItemsRepeater.Layout>
                    <StackLayout Spacing="10" />
                </ItemsRepeater.Layout>
                <ItemsRepeater.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <SymbolIcon Symbol="Link" Grid.Column="0" Margin="0,0,12,0" />
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock FontSize="13" FontWeight="SemiBold" Text="{Binding Title}" />
                                    <TextBlock FontSize="12" Opacity="0.7" Text="{Binding Description}" />
                                </StackPanel>
                                <HyperlinkButton Grid.Column="2" Content="{Binding ButtonText}" NavigateUri="{Binding NavigateUri}" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>

            <!-- Contributors Expander -->
            <Expander HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                <Expander.Header>
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <SymbolIcon Symbol="People" />
                        <StackPanel>
                            <TextBlock FontSize="13" FontWeight="SemiBold" Text="People" />
                            <TextBlock FontSize="12" Opacity="0.7" Text="Fellow humans who helped and continue to make InfoPanel great." />
                        </StackPanel>
                    </StackPanel>
                </Expander.Header>
                <ItemsRepeater ItemsSource="{x:Bind ViewModel.Contributors, Mode=OneWay}">
                    <ItemsRepeater.Layout>
                        <StackLayout Spacing="16" />
                    </ItemsRepeater.Layout>
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock FontSize="13" FontWeight="SemiBold" Text="{Binding Name}" />
                                <TextBlock FontSize="12" Opacity="0.7" Text="{Binding Description}" />
                            </StackPanel>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>
            </Expander>

            <!-- Licenses Expander -->
            <Expander HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                <Expander.Header>
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <SymbolIcon Symbol="Library" />
                        <StackPanel>
                            <TextBlock FontSize="13" FontWeight="SemiBold" Text="Licenses" />
                            <TextBlock FontSize="12" Opacity="0.7" Text="Software and licenses used." />
                        </StackPanel>
                    </StackPanel>
                </Expander.Header>
                <ItemsRepeater ItemsSource="{x:Bind ViewModel.ThirdPartyLicenses, Mode=OneWay}">
                    <ItemsRepeater.Layout>
                        <StackLayout Spacing="16" />
                    </ItemsRepeater.Layout>
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock FontSize="13" FontWeight="SemiBold" Text="{Binding Name}" />
                                <TextBlock FontSize="12" Opacity="0.7" Text="{Binding License}" />
                                <HyperlinkButton Content="{Binding ProjectUrl}" NavigateUri="{Binding ProjectUrl}" FontSize="12" />
                            </StackPanel>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>
            </Expander>
        </StackPanel>
    </ScrollViewer>
</Page>