<Page
    x:Class="InfoPanel.Views.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:InfoPanel"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel MaxWidth="1360" Margin="20,0,20,20">
            <!-- Hero Banner -->
            <Grid Height="400" CornerRadius="8">
                <Grid.Background>
                    <ImageBrush ImageSource="ms-appx:///Resources/Images/home.jpg" Stretch="UniformToFill" />
                </Grid.Background>
                <Border CornerRadius="8" Background="#8F000000">
                    <StackPanel Margin="16" HorizontalAlignment="Left" VerticalAlignment="Center">
                        <TextBlock FontSize="28" FontWeight="Bold" Text="Welcome to InfoPanel." Foreground="White" />
                        <TextBlock FontSize="18" Opacity=".8" Text="Level up your desktop." Foreground="White" />
                    </StackPanel>
                </Border>
            </Grid>

            <Grid Margin="50,30,50,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Left Column - Navigation Cards -->
                <StackPanel Grid.Column="0" Margin="0,0,10,0" Spacing="10">
                    <Button x:Name="ProfilesButton" Click="NavigateButton_Click" Tag="profiles" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Padding="16">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <SymbolIcon Symbol="List" />
                            <StackPanel>
                                <TextBlock FontSize="13" FontWeight="SemiBold" Text="Profiles" />
                                <TextBlock FontSize="12" Opacity="0.7" Text="Create and manage your profiles." />
                            </StackPanel>
                        </StackPanel>
                    </Button>

                    <Button x:Name="DesignButton" Click="NavigateButton_Click" Tag="design" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Padding="16">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <SymbolIcon Symbol="Edit" />
                            <StackPanel>
                                <TextBlock FontSize="13" FontWeight="SemiBold" Text="Design" />
                                <TextBlock FontSize="12" Opacity="0.7" Text="Customisation and design." />
                            </StackPanel>
                        </StackPanel>
                    </Button>

                    <Button x:Name="UpdatesButton" Click="NavigateButton_Click" Tag="updates" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Padding="16">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <SymbolIcon Symbol="Sync" />
                            <StackPanel>
                                <TextBlock FontSize="13" FontWeight="SemiBold" Text="Updates" />
                                <TextBlock FontSize="12" Opacity="0.7" Text="Check for updates and view version history." />
                            </StackPanel>
                        </StackPanel>
                    </Button>

                    <Button x:Name="PluginsButton" Click="NavigateButton_Click" Tag="plugins" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Padding="16">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <SymbolIcon Symbol="AllApps" />
                            <StackPanel>
                                <TextBlock FontSize="13" FontWeight="SemiBold" Text="Plugins" />
                                <TextBlock FontSize="12" Opacity="0.7" Text="View activated plugins." />
                            </StackPanel>
                        </StackPanel>
                    </Button>

                    <Button x:Name="SettingsButton" Click="NavigateButton_Click" Tag="settings" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Padding="16">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <SymbolIcon Symbol="Setting" />
                            <StackPanel>
                                <TextBlock FontSize="13" FontWeight="SemiBold" Text="Settings" />
                                <TextBlock FontSize="12" Opacity="0.7" Text="Manage settings." />
                            </StackPanel>
                        </StackPanel>
                    </Button>

                    <Button x:Name="AboutButton" Click="NavigateButton_Click" Tag="about" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Padding="16">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <SymbolIcon Symbol="Help" />
                            <StackPanel>
                                <TextBlock FontSize="13" FontWeight="SemiBold" Text="About" />
                                <TextBlock FontSize="12" Opacity="0.7" Text="Resource links, donations and acknowledgments." />
                            </StackPanel>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Right Column - Info Cards -->
                <StackPanel Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center" Spacing="10">
                    <!-- Review Card -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <SymbolIcon Symbol="Favorite" Grid.Column="0" Margin="0,0,12,0" />
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock FontSize="13" FontWeight="SemiBold" Text="Love InfoPanel?" />
                                <TextBlock FontSize="12" Opacity="0.7" Text="Leave a review for others to see and help InfoPanel grow." />
                            </StackPanel>
                            <HyperlinkButton Grid.Column="2" Content="Review" NavigateUri="ms-windows-store://review/?ProductId=XPFP7C8H5446ZD" />
                        </Grid>
                    </Border>

                    <!-- Donate Card -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <SymbolIcon Symbol="Like" Grid.Column="0" Margin="0,0,12,0" />
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock FontSize="13" FontWeight="SemiBold" Text="Support Development" />
                                <TextBlock FontSize="12" Opacity="0.7" Text="Show your appreciation and buy me a coffee." />
                            </StackPanel>
                            <HyperlinkButton Grid.Column="2" Content="Donate" NavigateUri="https://www.buymeacoffee.com/urfath3r" />
                        </Grid>
                    </Border>

                    <!-- Discord Card -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <SymbolIcon Symbol="Message" Grid.Column="0" Margin="0,0,12,0" />
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock FontSize="13" FontWeight="SemiBold" Text="Discord" />
                                <TextBlock FontSize="12" Opacity="0.7" Text="Join in conversations with others regarding InfoPanel." />
                            </StackPanel>
                            <HyperlinkButton Grid.Column="2" Content="Join" NavigateUri="https://discord.gg/cQnjdMC7Qc" />
                        </Grid>
                    </Border>

                    <!-- Reddit Card -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <SymbolIcon Symbol="Globe" Grid.Column="0" Margin="0,0,12,0" />
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock FontSize="13" FontWeight="SemiBold" Text="Reddit" />
                                <TextBlock FontSize="12" Opacity="0.7" Text="Help grow the /r/InfoPanel community." />
                            </StackPanel>
                            <HyperlinkButton Grid.Column="2" Content="Launch" NavigateUri="https://www.reddit.com/r/InfoPanel/" />
                        </Grid>
                    </Border>
                </StackPanel>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Page>
