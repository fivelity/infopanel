<Window
    x:Class="InfoPanel.Views.Windows.TuringDeviceWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Turing Device Manager"
    Width="900"
    Height="600"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border
            Grid.Row="0"
            Background="#FF2D2D30"
            Padding="10">
            <TextBlock Text="{Binding DeviceName, FallbackValue='Turing Device Manager'}" FontSize="16" FontWeight="SemiBold" Foreground="White" />
        </Border>

        <TabControl Grid.Row="1" Margin="10">
            <!--  Video Management Tab  -->
            <TabItem Header="Video Management">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Storage Info  -->
                    <Border Grid.Row="0" Background="#FF2D2D30" Padding="10">
                        <TextBlock Text="{Binding DeviceName, FallbackValue='Turing Device Manager'}" FontSize="16" FontWeight="SemiBold" Foreground="White" />
                    </Border>
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,10"
                            FontSize="16"
                            FontWeight="Bold"
                            Text="Storage Information" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="0,0,10,5"
                                Text="Total Space:" />
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="0,0,0,5"
                                Text="{Binding TotalStorageDisplay}" />

                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="0,0,10,5"
                                Text="Used Space:" />
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="0,0,0,5"
                                Text="{Binding UsedStorageDisplay}" />

                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="0"
                                Margin="0,0,10,0"
                                Text="Free Space:" />
                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="1"
                                Text="{Binding FreeStorageDisplay}" />
                        </Grid>

                        <ProgressBar
                            Height="10"
                            Margin="0,10,0,0"
                            Maximum="100"
                            Value="{Binding StorageUsagePercentage}" />
                    </StackPanel>
                    <Border Grid.Row="1" Margin="0,0,0,10" Background="#FF333337" CornerRadius="4" Padding="10">
                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,10"
                                FontSize="16"
                                FontWeight="Bold"
                                Text="Action Buttons" />

                            <StackPanel
                                Margin="0,0,0,10"
                                Orientation="Horizontal">
                                <Button
                                    Margin="0,0,10,0"
                                    Command="{Binding RefreshStorageCommand}"
                                    Content="Refresh" />
                                <Button
                                    Margin="0,0,10,0"
                                    Command="{Binding UploadVideoCommand}"
                                    Content="Upload Video" />
                                <TextBlock
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    FontStyle="Italic"
                                    Text="{Binding CurrentlyPlaying, StringFormat='Currently Playing: {0}', FallbackValue='Currently Playing: Nothing'}" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!--  File List  -->
                    <Border Grid.Row="2" Margin="0,0,0,10" Background="#FF333337" CornerRadius="4" Padding="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Margin="0,0,0,10"
                                FontSize="14"
                                FontWeight="Bold"
                                Text="Video Files" />

                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding DeviceFiles}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#FF444444" Margin="0,0,0,5" Padding="10" CornerRadius="4">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="80" />
                                                        <ColumnDefinition Width="100" />
                                                        <ColumnDefinition Width="200" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Text="{Binding Name}" VerticalAlignment="Center" />
                                                    <TextBlock Grid.Column="1" Text="{Binding Type}" VerticalAlignment="Center" Margin="10,0" />
                                                    <TextBlock Grid.Column="2" Text="{Binding SizeDisplay}" VerticalAlignment="Center" />
                                                    <StackPanel Grid.Column="3" Orientation="Horizontal">
                                                        <Button
                                                            Margin="0,0,5,0"
                                                            Padding="5,2"
                                                            Command="{Binding DataContext.PlayFileCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                            CommandParameter="{Binding}"
                                                            Content="Play"
                                                            FontSize="12" />
                                                        <Button
                                                            Padding="5,2"
                                                            Command="{Binding DataContext.DeleteFileCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                            CommandParameter="{Binding}"
                                                            Content="Delete"
                                                            FontSize="12" />
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </Border>

                    <!--  Status Bar Container with fixed height  -->
                    <Grid
                        Grid.Row="3"
                        Height="60"
                        Margin="0,10,0,0">
                        <Border
                            Grid.Row="3"
                            Height="60"
                            Margin="0,10,0,0"
                            Background="#FF444444"
                            CornerRadius="4"
                            Padding="10">
                            <TextBlock Text="{Binding StatusMessage}" Foreground="White" VerticalAlignment="Center" />
                        </Border>
                    </Grid>
                </Grid>
            </TabItem>

            <!--  Settings Tab  -->
            <TabItem Header="Settings">
                <Grid Margin="10">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!--  Device Settings  -->
                <Border Grid.Row="1" Margin="0,0,0,10" Background="#FF333337" CornerRadius="4" Padding="10">
                                <StackPanel>
                                    <TextBlock
                                        Margin="0,0,0,10"
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Text="Device Settings" />

                                    <TextBlock Margin="0,0,0,5" Text="Default Brightness:" />
                                    <Grid Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="50" />
                                        </Grid.ColumnDefinitions>
                                        <Slider
                                            Grid.Column="0"
                                            Margin="0,0,10,0"
                                            IsSnapToTickEnabled="True"
                                            Maximum="100"
                                            Minimum="0"
                                            TickFrequency="5"
                                            Value="{Binding Brightness}" />
                                        <TextBlock
                                            Grid.Column="1"
                                            VerticalAlignment="Center"
                                            Text="{Binding Brightness, StringFormat='{}{0}%'}" />
                                    </Grid>

                                    <TextBlock Margin="0,0,0,5" Text="Default Orientation:" />
                                    <ComboBox
                                        Width="200"
                                        Margin="0,0,0,15"
                                        HorizontalAlignment="Left"
                                        ItemsSource="{Binding OrientationOptions}"
                                        SelectedItem="{Binding SelectedOrientation}" />

                                    <TextBlock Margin="0,0,0,5" Text="Startup Mode:" />
                                    <ComboBox
                                        Width="200"
                                        Margin="0,0,0,10"
                                        HorizontalAlignment="Left"
                                        ItemsSource="{Binding StartupModeOptions}"
                                        SelectedItem="{Binding SelectedStartupMode}" />

                                    <TextBlock
                                        Margin="0,0,0,10"
                                        FontSize="12"
                                        FontStyle="Italic"
                                        Text="Note: When 'Video' is selected as startup mode, the currently playing video will be set as the auto-play video."
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </Border>

                            <!--  Device Actions  -->
                            <Border Margin="0,0,0,10" Background="#FF333337" CornerRadius="4" Padding="10">
                                <StackPanel>
                                    <TextBlock
                                        Margin="0,0,0,10"
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Text="Device Actions" />

                                    <StackPanel Orientation="Horizontal">
                                        <Button
                                            Margin="0,0,10,10"
                                            Command="{Binding SaveSettingsCommand}"
                                            Content="Save Settings" />
                                        <Button
                                            Margin="0,0,10,10"
                                            Command="{Binding RestartDeviceCommand}"
                                            Content="Restart Device" />
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
        </TabControl>

        <!--  Loading Overlay  -->
        <Grid
            Grid.Row="1"
            Background="#80000000"
            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressRing
                    Width="50"
                    Height="50"
                    IsActive="True" />
                <TextBlock
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    Foreground="White"
                    Text="{Binding LoadingText}" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>