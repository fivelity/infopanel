<UserControl
    x:Class="InfoPanel.Views.Components.SensorActions"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:InfoPanel"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignWidth="600"
    mc:Ignorable="d">
    <Grid
        x:Name="GridActions"
        Margin="0,10,0,0"
        IsEnabled="{Binding Path=SelectedSensorItem, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource NullToBooleanConverter}}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Button
            x:Name="ButtonSelect"
            Grid.Column="1"
            Click="ButtonSelect_Click"
            IsEnabled="True"
            ToolTipService.ToolTip="Add selected sensor as a text item">
            <SymbolIcon Symbol="Character" />
        </Button>
        <Button
            x:Name="ButtonAddBar"
            Grid.Column="2"
            Margin="10,0,0,0"
            Click="ButtonAddBar_Click"
            IsEnabled="True"
            ToolTipService.ToolTip="Add selected sensor as a bar">
            <SymbolIcon Symbol="ShowResults" />
        </Button>
        <Button
            x:Name="ButtonAddDonut"
            Grid.Column="3"
            Margin="10,0,0,0"
            Click="ButtonAddDonut_Click"
            IsEnabled="True"
            ToolTipService.ToolTip="Add selected sensor as a donut">
            <SymbolIcon Symbol="Target" />
        </Button>
        <Button
            x:Name="ButtonAddGraph"
            Grid.Column="4"
            Margin="10,0,0,0"
            Click="ButtonAddGraph_Click"
            IsEnabled="True"
            ToolTipService.ToolTip="Add selected sensor as a graph">
            <SymbolIcon Symbol="Sort" />
        </Button>
        <Button
            x:Name="ButtonAddCustom"
            Grid.Column="5"
            Margin="10,0,0,0"
            Click="ButtonAddCustom_Click"
            IsEnabled="True"
            ToolTipService.ToolTip="Add selected sensor as gauge">
            <SymbolIcon Symbol="Clock" />
        </Button>
        <Button
            x:Name="ButtonAddSensorImage"
            Grid.Column="6"
            Margin="10,0,0,0"
            Click="ButtonAddSensorImage_Click"
            IsEnabled="True"
            ToolTipService.ToolTip="Add selected sensor as sensor image">
            <SymbolIcon Symbol="Contact" />
        </Button>
        <Button
            x:Name="ButtonReplace"
            Grid.Column="7"
            Margin="10,0,0,0"
            Click="ButtonReplace_Click"
            IsEnabled="{x:Bind local:SharedModel.Instance.SelectedItem, Mode=OneWay, Converter={StaticResource IsSensorConverter}}"
            ToolTipService.ToolTip="Replace selected sensor">
            <SymbolIcon Symbol="Refresh" />
        </Button>
    </Grid>
</UserControl>