<UserControl
    x:Class="InfoPanel.Views.Components.HwInfoSensors"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:app="using:InfoPanel"
    xmlns:components="using:InfoPanel.Views.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:InfoPanel"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:InfoPanel.Models"
    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
    mc:Ignorable="d">

    <Grid Margin="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
        </Grid>

        <ScrollViewer
            Name="MyScrollViewer"
            Grid.Row="1"
            Margin="0,10,0,0"
            PointerWheelChanged="ScrollViewer_PointerWheelChanged">
            <StackPanel >
                <TreeView
                    x:Name="TreeViewInfo"
                    Margin="0,0,0,0"
                    ItemsSource="{Binding Sensors}"
                    SelectionChanged="TreeViewInfo_SelectionChanged">
                    <TreeView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="0,0,0,0"
                                    Foreground="LightGray"
                                    Text="{Binding Name}" />
                            </StackPanel>
                        </DataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Margin="10,0,10,0">
            <Separator Grid.Row="2" Margin="0,5,0,5" />

            <Expander
                Grid.Row="3"
                Margin="0,0,0,0"
                IsExpanded="False">
                <Expander.Header>
                    <Grid Margin="0,0,20,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock HorizontalAlignment="Left" FontWeight="Medium" Text="{Binding Path=SelectedItem.Name, FallbackValue='No sensor selected.'}" />
                        <TextBlock 
                            Grid.Column="1" 
                            HorizontalAlignment="Right"
                            FontWeight="Medium" 
                            Text="{Binding Path=SelectedItem.FormattedValue, FallbackValue='Value'}" />
                    </Grid>
                </Expander.Header>
                <StackPanel Margin="0,-5,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="0.5*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBox
                                Margin="0,8,0,0"
                                IsEnabled="True"
                                IsReadOnly="True"
                                Text="{Binding Path=SelectedItem.ParentId, Converter={StaticResource Int32ValueConverter}}" />
                            <TextBlock
                                Margin="5,0,0,0"
                                FontSize="12"
                                Foreground="{ThemeResource TextFillColorDisabledBrush}"
                                Text="Id" />
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBox
                                Margin="0,8,0,0"
                                IsEnabled="True"
                                IsReadOnly="True"
                                Text="{Binding Path=SelectedItem.ParentInstance, Converter={StaticResource Int32ValueConverter}}" />
                            <TextBlock
                                Margin="5,0,0,0"
                                FontSize="12"
                                Foreground="{ThemeResource TextFillColorDisabledBrush}"
                                Text="Instance" />
                        </StackPanel>

                        <StackPanel Grid.Column="2" Margin="10,0,0,0">
                            <TextBox
                                Margin="0,8,0,0"
                                IsEnabled="True"
                                IsReadOnly="True"
                                Text="{Binding Path=SelectedItem.SensorId, Converter={StaticResource Int32ValueConverter}}" />
                            <TextBlock
                                Margin="5,0,0,0"
                                FontSize="12"
                                Foreground="{ThemeResource TextFillColorDisabledBrush}"
                                Text="Entry Id" />
                        </StackPanel>
                    </Grid>


                </StackPanel>
            </Expander>

            <Separator Grid.Row="4" Margin="0,5,0,0" />

            <components:SensorActions
                Grid.Row="5"
                SelectedSensorItem="{Binding SelectedItem}"
                SensorType="HwInfo" />
        </StackPanel>
    </Grid>
</UserControl>
