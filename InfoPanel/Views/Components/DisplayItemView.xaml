<UserControl
    x:Class="InfoPanel.Views.Components.DisplayItemView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:InfoPanel.Views.Components"
    x:Name="Root"
    Width="Auto"
    Height="Auto">
    
    <UserControl.Resources>
        <local:KindToGlyphConverter x:Key="KindToGlyphConverter" />
        <local:SensorTypeToIconConverter x:Key="SensorTypeToIconConverter" />
    </UserControl.Resources>
    
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25" />
            <ColumnDefinition Width="230" />
            <ColumnDefinition Width="30" />
            <ColumnDefinition Width="80" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- Symbol Icon -->
        <FontIcon
            Grid.Column="0"
            Width="20"
            Height="20"
            Margin="0,4,5,0"
            VerticalAlignment="Center"
            FontFamily="Segoe Fluent Icons"
            Glyph="{x:Bind Kind, Converter={StaticResource KindToGlyphConverter}}" />

        <!-- Name -->
        <TextBlock
            Grid.Column="1"
            VerticalAlignment="Center"
            Text="{x:Bind Name}"
            TextTrimming="CharacterEllipsis" />

        <!-- Sensor Type Icon -->
        <Image
            Grid.Column="2"
            Width="20"
            Height="20"
            Margin="0,0,10,0"
            VerticalAlignment="Center"
            Source="{x:Bind SensorType, Converter={StaticResource SensorTypeToIconConverter}}" />

        <!-- Coordinates -->
        <TextBlock
            Grid.Column="3"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Text="{x:Bind CoordinatesText}" />

        <Button
            Grid.Column="4"
            Width="20"
            Height="20"
            Margin="10,0,-10,0"
            Padding="0"
            VerticalAlignment="Center"
            Background="Transparent"
            BorderThickness="0"
            Command="{x:Bind ToggleLockCommand}"
            ToolTipService.ToolTip="Lock item to prevent drag move.">
            <FontIcon
                FontFamily="Segoe Fluent Icons"
                Glyph="{x:Bind IsLocked, Converter={StaticResource LockSymbolConverter}}"
                Foreground="{x:Bind IsLocked, Converter={StaticResource LockColorConverter}}" />
        </Button>

        <!-- Visibility Checkbox -->
        <CheckBox
            Grid.Column="5"
            Margin="10,0,0,0"
            VerticalAlignment="Center"
            IsChecked="{x:Bind Hidden, Converter={StaticResource InverseBooleanConverter}, Mode=TwoWay}" />
    </Grid>
</UserControl>
