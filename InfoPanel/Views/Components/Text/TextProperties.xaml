<UserControl
    x:Class="InfoPanel.Views.Components.TextProperties"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:app="using:InfoPanel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:InfoPanel.Views.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:InfoPanel.Models"
    d:DataContext="{d:DesignInstance Type=models:TextDisplayItem}"
    mc:Ignorable="d">

    <Grid Margin="10,10,10,0">
        <StackPanel Grid.Column="1">
            <StackPanel>
                <TextBox x:Name="TextBoxName" Text="{x:Bind Name, Mode=TwoWay}" />
                <TextBlock
                    Margin="5,0,0,0"
                    FontSize="12"
                    Foreground="{ThemeResource TextFillColorDisabledBrush}"
                    Text="Text" />
            </StackPanel>

            <StackPanel
                Grid.Row="2"
                Margin="0,-2,0,0"
                HorizontalAlignment="Right"
                Orientation="Horizontal"
                Spacing="5">
                <ToggleButton IsChecked="{x:Bind Underline, Mode=TwoWay}">
                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8DD;" ToolTipService.ToolTip="Underline" />
                </ToggleButton>
                <ToggleButton IsChecked="{x:Bind Strikeout, Mode=TwoWay}">
                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8DE;" ToolTipService.ToolTip="Strikethrough" />
                </ToggleButton>
                <ToggleButton IsChecked="{x:Bind RightAlign, Mode=TwoWay}">
                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8E2;" ToolTipService.ToolTip="Right align" />
                </ToggleButton>
                <ToggleButton IsChecked="{x:Bind Uppercase, Mode=TwoWay}">
                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8E1;" ToolTipService.ToolTip="Uppercase" />
                </ToggleButton>
                <ToggleButton IsChecked="{x:Bind Wrap, Mode=TwoWay}">
                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8A4;" ToolTipService.ToolTip="Wrap Text (fixed width required)" />
                </ToggleButton>
                <ToggleButton IsChecked="{x:Bind Ellipsis, Mode=TwoWay}">
                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8E3;" ToolTipService.ToolTip="Ellipsis (fixed width required)" />
                </ToggleButton>
                <ToggleButton IsChecked="{x:Bind CenterAlign, Mode=TwoWay}">
                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8E0;" ToolTipService.ToolTip="Center align (fixed width required)" />
                </ToggleButton>
                <ToggleButton IsChecked="{x:Bind Marquee, Mode=TwoWay}">
                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8E4;" ToolTipService.ToolTip="Marquee (fixed width required)" />
                </ToggleButton>
            </StackPanel>

            <Grid Margin="0,12,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,0,0">
                    <NumberBox
                        Margin="0,0,0,0"
                        FontSize="14"
                        Minimum="0"
                        SmallChange="1"
                        Value="{x:Bind Width, Mode=TwoWay}" />
                    <TextBlock
                        FontSize="12"
                        Foreground="{ThemeResource TextFillColorDisabledBrush}"
                        Text="Fixed Width" />
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <NumberBox
                        Margin="0,0,0,0"
                        FontSize="14"
                        Minimum="0"
                        SmallChange="1"
                        Value="{x:Bind MarqueeSpacing, Mode=TwoWay}" />
                    <TextBlock
                        FontSize="12"
                        Foreground="{ThemeResource TextFillColorDisabledBrush}"
                        Text="Marquee spacing" />
                </StackPanel>

                <StackPanel
                    Grid.Column="2"
                    Margin="10,0,0,0"
                    VerticalAlignment="Bottom"
                    IsEnabled="{x:Bind Marquee, Mode=OneWay}">
                    <Slider
                        Margin="0,0,0,0"
                        Maximum="1000"
                        Minimum="1"
                        Value="{x:Bind MarqueeSpeed, Mode=TwoWay}" />

                    <Grid Margin="5,0,5,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            Margin="0,0,0,0"
                            FontSize="12"
                            Foreground="{ThemeResource TextFillColorDisabledBrush}"
                            Text="Marquee speed" />
                        <TextBlock
                            Grid.Column="1"
                            Margin="0,0,0,0"
                            FontSize="12"
                            Foreground="{ThemeResource TextFillColorDisabledBrush}"
                            Text="{x:Bind MarqueeSpeed, Mode=OneWay}" />
                    </Grid>
                </StackPanel>
            </Grid>

            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Margin="0,0,0,0">
                    <ColorPicker
                        Height="35"
                        Background="Transparent"
                        BorderThickness="1"
                        Color="{x:Bind Color, Mode=TwoWay}" />
                    <TextBlock
                        Margin="5,0,0,0"
                        FontSize="12"
                        Foreground="{ThemeResource TextFillColorDisabledBrush}"
                        Text="Font Color" />
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <NumberBox
                        Margin="0,0,0,0"
                        FontSize="14"
                        SmallChange="1"
                        Value="{x:Bind FontSize, Mode=TwoWay}"
                        ValueChanged="NumberBox_ValueChanged" />
                    <TextBlock
                        Margin="5,0,0,0"
                        FontSize="12"
                        Foreground="{ThemeResource TextFillColorDisabledBrush}"
                        Text="Font Size" />
                </StackPanel>
            </Grid>

            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackPanel Margin="0,0,5,0">
                    <ComboBox
                        Grid.Column="1"
                        ItemsSource="{x:Bind InstalledFonts}"
                        ScrollViewer.VerticalScrollBarVisibility="Visible"
                        SelectedValue="{x:Bind Font}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock FontFamily="{Binding Converter={StaticResource FontFamilyConverter}}" Text="{Binding}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <TextBlock
                        Margin="5,0,0,0"
                        FontSize="12"
                        Foreground="{ThemeResource TextFillColorDisabledBrush}"
                        Text="Font Family" />
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="5,0,0,0">
                    <ComboBox
                        Grid.Column="1"
                        ItemsSource="{x:Bind FontStyles}"
                        ScrollViewer.VerticalScrollBarVisibility="Visible"
                        SelectedValue="{x:Bind FontStyle}" />
                    <TextBlock
                        Margin="5,0,0,0"
                        FontSize="12"
                        Foreground="{ThemeResource TextFillColorDisabledBrush}"
                        Text="Font Style" />
                </StackPanel>
            </Grid>



        </StackPanel>


    </Grid>
</UserControl>
