<UserControl
    x:Class="InfoPanel.Views.Components.CommonProperties"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:InfoPanel.Views.Components"
    mc:Ignorable="d">

    <Border Background="#601A1a1a" CornerRadius="8">
        <Grid x:Name="GridMain" Margin="20" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Direction Buttons -->
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Button x:Name="ButtonLeft" Grid.Row="1" Grid.Column="0" Width="40" Height="40" Margin="0,0,10,0" Click="ButtonLeft_Click">
                    <SymbolIcon Symbol="Back" />
                </Button>
                <Button x:Name="ButtonUp" Grid.Row="0" Grid.Column="1" Width="40" Height="40" Margin="0,0,0,10" Click="ButtonUp_Click">
                    <SymbolIcon Symbol="Up" />
                </Button>
                <Button x:Name="ButtonRight" Grid.Row="1" Grid.Column="2" Width="40" Height="40" Margin="10,0,0,0" Click="ButtonRight_Click">
                    <SymbolIcon Symbol="Forward" />
                </Button>
                <Button x:Name="ButtonDown" Grid.Row="2" Grid.Column="1" Width="40" Height="40" Margin="0,10,0,0" Click="ButtonDown_Click">
                    <SymbolIcon Symbol="Download" />
                </Button>
                <Button x:Name="ButtonMoveValue" Grid.Row="1" Grid.Column="1" Width="40" Height="40" Click="ButtonMoveValue_Click">
                    <TextBlock x:Name="TextBlockMoveValue" FontSize="12" TextDecorations="Underline" Text="1 px" />
                </Button>
            </Grid>

            <!-- Position Controls -->
            <StackPanel Grid.Row="2" Margin="0,10,0,0" Spacing="5">
                <NumberBox x:Name="NumberBoxX" Header="Position X" SpinButtonPlacementMode="Compact" ValueChanged="NumberBoxX_ValueChanged" />
                <NumberBox x:Name="NumberBoxY" Header="Position Y" SpinButtonPlacementMode="Compact" ValueChanged="NumberBoxY_ValueChanged" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
