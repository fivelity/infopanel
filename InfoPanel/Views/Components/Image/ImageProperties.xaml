<UserControl
    x:Class="InfoPanel.Views.Components.ImageProperties"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:app="using:InfoPanel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:InfoPanel.Views.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:InfoPanel.Models"
    d:DataContext="{d:DesignInstance Type=models:SensorImageDisplayItem}"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Margin="10,10,10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="0,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ContentControl Grid.Row="0" Content="{Binding}">
                <ContentControl.Resources>
                    <DataTemplate x:Key="FileTemplate">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,0,0">
                                <TextBox IsReadOnly="True" Text="{x:Bind CalculatedPath, Mode=OneWay}" />
                                <TextBlock
                                    Margin="5,0,0,0"
                                    FontSize="12"
                                    Foreground="{ThemeResource TextFillColorDisabledBrush}"
                                    Text="Path" />
                            </StackPanel>
                            <Button
                                x:Name="ButtonSelect"
                                Grid.Column="1"
                                Width="150"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Top"
                                Click="ButtonSelect_Click"
                                Content="Select Media"
                                Visibility="{x:Bind ReadOnly, Converter={StaticResource InverseBooleanToVisibilityConverter}}" />
                        </Grid>
                    </DataTemplate>
                    <DataTemplate x:Key="RtspTemplate">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,0,0">
                                <TextBox Text="{x:Bind RtspUrl, Mode=TwoWay}" />
                                <TextBlock
                                    Margin="5,0,0,0"
                                    FontSize="12"
                                    Foreground="{ThemeResource TextFillColorDisabledBrush}"
                                    Text="RTSP Stream URL (tab to apply)" />
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                    <DataTemplate x:Key="UrlTemplate">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,0,0">
                                <TextBox IsReadOnly="{x:Bind ReadOnly, Mode=OneWay}" Text="{x:Bind HttpUrl, Mode=TwoWay}" />
                                <TextBlock
                                    Margin="5,0,0,0"
                                    FontSize="12"
                                    Foreground="{ThemeResource TextFillColorDisabledBrush}"
                                    Text="HTTP/HTTPS URL (tab to apply)" />
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ContentControl.Resources>
                <ContentControl.Style>
                    <Style TargetType="ContentControl">
                        <Setter Property="ContentTemplate" Value="{StaticResource FileTemplate}" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Type}" Value="RTSP">
                                <Setter Property="ContentTemplate" Value="{StaticResource RtspTemplate}" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Type}" Value="URL">
                                <Setter Property="ContentTemplate" Value="{StaticResource UrlTemplate}" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ContentControl.Style>
            </ContentControl>

            <Grid Grid.Row="1" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Margin="0,0,0,0">
                    <NumberBox
                        Margin="0,0,0,0"
                        FontSize="14"
                        Minimum="0"
                        SmallChange="1"
                        Value="{x:Bind Width, Mode=TwoWay}" />
                    <TextBlock
                        Margin="5,0,0,0"
                        FontSize="12"
                        Foreground="{ThemeResource TextFillColorDisabledBrush}"
                        Text="Width" />
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <NumberBox
                        Margin="0,0,0,0"
                        FontSize="14"
                        Minimum="0"
                        SmallChange="1"
                        Value="{x:Bind Height, Mode=TwoWay}" />
                    <TextBlock
                        Margin="5,0,0,0"
                        FontSize="12"
                        Foreground="{ThemeResource TextFillColorDisabledBrush}"
                        Text="Height" />
                </StackPanel>
            </Grid>

            <Grid Grid.Row="2" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,0,0">
                    <Slider
                        Name="SliderFScale"
                        Grid.Column="1"
                        Margin="0,0,0,0"
                        Maximum="200"
                        Minimum="1"
                        Value="{x:Bind Scale, Mode=TwoWay}" />

                    <Grid Margin="5,0,5,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            Margin="0,0,0,0"
                            FontSize="12"
                            Foreground="{ThemeResource TextFillColorDisabledBrush}"
                            Text="Resize scale" />
                        <TextBlock
                            Grid.Column="1"
                            Margin="0,0,0,0"
                            FontSize="12"
                            Foreground="{ThemeResource TextFillColorDisabledBrush}"
                            Text="{x:Bind Scale, Mode=OneWay}" />
                    </Grid>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <Slider
                        Margin="0,0,0,0"
                        Maximum="180"
                        Minimum="-180"
                        Value="{x:Bind Rotation, Mode=TwoWay}" />

                    <Grid Margin="5,0,5,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            Margin="0,0,0,0"
                            FontSize="12"
                            Foreground="{ThemeResource TextFillColorDisabledBrush}"
                            Text="Rotation" />
                        <TextBlock
                            Grid.Column="1"
                            Margin="0,0,0,0"
                            FontSize="12"
                            Foreground="{ThemeResource TextFillColorDisabledBrush}"
                            Text="{x:Bind Rotation, Mode=OneWay}" />
                    </Grid>
                </StackPanel>

                <StackPanel Grid.Column="2" Margin="10,0,0,0">
                    <Slider
                        x:Name="VolumeSlider"
                        Margin="0,0,0,0"
                        IsSnapToTickEnabled="True"
                        Maximum="100"
                        TickFrequency="1"
                        Value="{x:Bind Volume, Mode=TwoWay}" />

                    <Grid Margin="5,0,5,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            Margin="0,0,0,0"
                            FontSize="12"
                            Foreground="{ThemeResource TextFillColorDisabledBrush}"
                            Text="Volume" />
                        <TextBlock
                            Grid.Column="1"
                            Margin="0,0,0,0"
                            FontSize="12"
                            Foreground="{ThemeResource TextFillColorDisabledBrush}"
                            Text="{Binding Value, ElementName=VolumeSlider, Mode=OneWay}" />
                    </Grid>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="3" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <CheckBox
                        x:Name="CheckBoxLayer"
                        Margin="0,0,0,0"
                        Content="Add Fill Layer"
                        IsChecked="{x:Bind Layer, Mode=TwoWay}" />
                    <ColorPicker
                        Height="40"
                        Margin="0,0,0,0"
                        Background="Transparent"
                        Color="{x:Bind LayerColor, Mode=TwoWay}" />
                </StackPanel>

                <controls:MyImage
                    Grid.Column="1"
                    Width="200"
                    Height="110"
                    Margin="10,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    ImageDisplayItem="{Binding}" />
            </Grid>

        </Grid>

        <Grid Grid.Column="1" Margin="10,0,0,0">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Margin="0,0,0,0">
                        <TextBox x:Name="TextBoxName" Text="{Binding Name}" />
                        <TextBlock
                            Margin="5,0,0,0"
                            FontSize="12"
                            Foreground="{DynamicResource TextFillColorDisabledBrush}"
                            Text="Name" />
                    </StackPanel>
                    <StackPanel
                        Grid.Column="1"
                        Margin="10,0,0,0"
                        IsEnabled="{Binding ReadOnly, Converter={StaticResource InverseBooleanConverter}}">
                        <ComboBox
                            Name="ComboBoxType"
                            Grid.Column="1"
                            SelectedValue="{Binding Type}" />
                        <TextBlock
                            Margin="5,0,0,0"
                            FontSize="12"
                            Foreground="{DynamicResource TextFillColorDisabledBrush}"
                            Text="Type" />
                    </StackPanel>
                </Grid>

                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <ui:CardControl
                        Grid.Column="0"
                        Margin="0,0,0,0"
                        Visibility="{Binding Type, Converter={StaticResource EnumEqualsConverter}, ConverterParameter='FILE'}">
                        <ui:CardControl.Header>
                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                <TextBlock FontSize="12" Text="Use Caching" />
                            </StackPanel>
                        </ui:CardControl.Header>
                        <StackPanel>
                            <ui:ToggleSwitch
                                Margin="0,-5,0,-5"
                                IsChecked="{Binding Cache}"
                                Unchecked="CheckBoxCache_Unchecked" />
                        </StackPanel>
                    </ui:CardControl>
                    <ui:CardControl Grid.Column="1" Margin="10,0,0,0">
                        <ui:CardControl.Header>
                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                <TextBlock FontSize="12" Text="Show Panel" />
                            </StackPanel>
                        </ui:CardControl.Header>
                        <StackPanel>
                            <ui:ToggleSwitch Margin="0,-5,0,-5" IsChecked="{Binding ShowPanel}" />
                        </StackPanel>
                    </ui:CardControl>
                </Grid>

                <ContentControl Margin="0,10,0,0" Content="{Binding}">
                    <ContentControl.Resources>
                        <DataTemplate DataType="{x:Type models:HttpImageDisplayItem}">
                            <StackPanel>
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel>
                                        <TextBox
                                            Margin="0,0,0,0"
                                            IsReadOnly="True"
                                            Text="{Binding SensorName}" />
                                        <TextBlock
                                            Margin="5,0,0,0"
                                            FontSize="12"
                                            Foreground="{DynamicResource TextFillColorDisabledBrush}"
                                            Text="Sensor" />
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type models:SensorImageDisplayItem}">
                            <StackPanel>

                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel>
                                        <TextBox
                                            Margin="0,0,0,0"
                                            IsReadOnly="True"
                                            Text="{Binding SensorName}" />
                                        <TextBlock
                                            Margin="5,0,0,0"
                                            FontSize="12"
                                            Foreground="{DynamicResource TextFillColorDisabledBrush}"
                                            Text="Sensor" />
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                        <ComboBox
                                            x:Name="ComboBoxValueType"
                                            ItemsSource="{Binding Source={StaticResource EnumValues}}"
                                            SelectedValue="{Binding ValueType}" />
                                        <TextBlock
                                            Margin="5,0,0,0"
                                            FontSize="12"
                                            Foreground="{DynamicResource TextFillColorDisabledBrush}"
                                            Text="Reading" />
                                    </StackPanel>
                                </Grid>



                                <Grid Margin="0,15,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Grid Margin="0,0,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="auto" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel>
                                            <ui:NumberBox
                                                Name="NumberBoxThreshold1"
                                                Margin="0,0,0,0"
                                                FontSize="14"
                                                MaxDecimalPlaces="3"
                                                Minimum="0"
                                                SmallChange="1"
                                                Text="{Binding Threshold1}"
                                                Value="{Binding Threshold1}" />
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="auto" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock
                                                    Margin="5,0,0,0"
                                                    FontSize="12"
                                                    Foreground="{DynamicResource TextFillColorDisabledBrush}"
                                                    Text="Show when ≥ Threshold #1" />
                                                <TextBlock
                                                    Grid.Column="1"
                                                    Margin="5,0,0,0"
                                                    FontSize="12"
                                                    Foreground="{DynamicResource TextFillColorDisabledBrush}"
                                                    Text="AND" />
                                            </Grid>

                                        </StackPanel>
                                    </Grid>


                                    <Grid Grid.Column="1" Margin="10,0,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="auto" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel>
                                            <ui:NumberBox
                                                Name="NumberBoxThreshold2"
                                                Margin="0,0,0,0"
                                                FontSize="14"
                                                MaxDecimalPlaces="3"
                                                Minimum="0"
                                                SmallChange="1"
                                                Text="{Binding Threshold2}"
                                                Value="{Binding Threshold2}" />
                                            <TextBlock
                                                Margin="5,0,0,0"
                                                FontSize="12"
                                                Foreground="{DynamicResource TextFillColorDisabledBrush}"
                                                Text="Hide when &gt; Threshold #2" />
                                        </StackPanel>

                                    </Grid>
                                </Grid>
                            </StackPanel>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type models:ImageDisplayItem}" />
                    </ContentControl.Resources>
                </ContentControl>

            </StackPanel>
        </Grid>

    </Grid>
</UserControl>
