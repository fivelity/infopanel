<UserControl
    x:Class="InfoPanel.Views.Components.PluginProperties"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:InfoPanel.Views.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:InfoPanel.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:PluginViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Expander Margin="0,10,0,0" IsEnabled="{Binding ControlEnabled}">
            <Expander.Header>
                <StackPanel>
                    <Grid Margin="0,0,20,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Margin="0,0,20,0">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock VerticalAlignment="Center" Text="{Binding Name}" />

                                <TextBlock
                                    Grid.Column="2"
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                    Text="{Binding Author, StringFormat=' by {0}'}"
                                    Visibility="{Binding Author, Converter={StaticResource NullToVisibilityConverter}}" />

                                <TextBlock
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                    Text="{Binding Version, StringFormat=' v{0}'}"
                                    Visibility="{Binding Version, Converter={StaticResource NullToVisibilityConverter}}" />

                            </Grid>



                            <TextBlock
                                Margin="0,5,0,0"
                                VerticalAlignment="Center"
                                FontSize="12"
                                Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                Text="{Binding Description}" />

                            <HyperlinkButton
                                Margin="0,5,0,0"
                                Content="{Binding Website}"
                                FontSize="12"
                                NavigateUri="{Binding Website}"
                                Visibility="{Binding Website, Converter={StaticResource NullToVisibilityConverter}}">
                                <HyperlinkButton.Icon>
                                    <SymbolIcon Symbol="Link2" />
                                </HyperlinkButton.Content>
                            </HyperlinkButton>
                        </StackPanel>


                        <ToggleSwitch
                            Grid.Column="2"
                            Margin="0,0,0,0"
                            VerticalAlignment="Center"
                            IsToggled="{Binding Activated}" />
                    </Grid>


                </StackPanel>
            </Expander.Header>

            <ItemsControl
                Margin="0,0,0,0"
                d:ItemsSource="{Binding Plugins}"
                ItemsSource="{Binding Plugins}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,10,0,0">
                            <Border.Header>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="auto" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                FontSize="13"
                                                FontWeight="Medium"
                                                Text="{Binding Name}" />
                                        </Grid>

                                        <Grid Margin="0,5,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="auto" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                FontSize="12"
                                                Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                                Text="{Binding Description}" />
                                        </Grid>

                                        <ItemsControl
                                            Margin="0,10,0,0"
                                            ItemsSource="{Binding Actions}"
                                            Visibility="{Binding Actions, Converter={StaticResource NullToVisibilityConverter}}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Horizontal" />
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Button
                                                        Margin="0,0,10,0"
                                                        Command="{Binding Command}"
                                                        Content="{Binding DisplayName}" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                        <ui:Anchor
                                            Width="150"
                                            VerticalAlignment="Center"
                                            Content="Open Config File"
                                            NavigateUri="{Binding ConfigFilePath}"
                                            Visibility="{Binding ConfigFilePath, Converter={StaticResource NullToVisibilityConverter}}" />

                                        <Button
                                            Width="150"
                                            Margin="0,10,0,0"
                                            Command="{Binding ReloadCommand}"
                                            Content="Reload"
                                            Visibility="{Binding ConfigFilePath, Converter={StaticResource NullToVisibilityConverter}}" />
                                    </StackPanel>
                                </Grid>

                            </ui:CardControl.Header>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </Expander>
    </Grid>
</UserControl>
