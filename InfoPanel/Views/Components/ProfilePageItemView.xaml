<UserControl
    x:Class="InfoPanel.Views.Components.ProfilePageItemView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:InfoPanel.Views.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:skia="using:SkiaSharp.Views.WinUI"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Border
            Width="260"
            Margin="0,0,0,0"
            Background="#601A1a1a"
            CornerRadius="8,8,8,8">
            <Grid>
                <Border
                    Background="{ThemeResource SubtleFillColorSecondaryBrush}"
                    BorderThickness="0"
                    CornerRadius="8,8,8,8"
                    Visibility="{Binding IsSelected, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}" />
                <StackPanel>
                    <skia:SKXamlCanvas
                        x:Name="skElement"
                        Height="150"
                        Margin="20,20,20,20"
                        PaintSurface="skElement_PaintSurface" />

                    <Border Background="#FF1A1a1a" CornerRadius="0,0,8,8">
                        <Grid Margin="10,0,10,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Margin="10,10,10,10"
                                       VerticalAlignment="Center"
                                       Text="{Binding Name}"
                                       TextTrimming="CharacterEllipsis" />
                            <ToggleSwitch
                                Grid.Column="1"
                                Toggled="ToggleSwitch_Checked"
                                IsOn="{Binding Active, Mode=TwoWay}" />
                        </Grid>
                    </Border>
                </StackPanel>
                <Button
                    Name="ButtonExport"
                    Grid.Column="1"
                    Margin="10,10,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Click="ButtonExport_Click"
                    Content="Export"
                    Visibility="{Binding IsSelected, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}" />
                <Button
                    Name="ButtonDelete"
                    Grid.Column="1"
                    Margin="0,10,10,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Click="ButtonDelete_Click"
                    ToolTipService.ToolTip="Delete Profile"
                    Visibility="{Binding IsSelected, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}">
                    <SymbolIcon Symbol="Delete" />
                </Button>
            </Grid>
        </Border>
    </Grid>
</UserControl>
