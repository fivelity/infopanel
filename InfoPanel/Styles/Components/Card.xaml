<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
    ========================================
    CARD COMPONENT
    shadcn/ui style card with variants
    ========================================
    -->

    <!-- Base Card Style -->
    <Style x:Key="DS_Card" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource DS_CardBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource DS_BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="{StaticResource DS_Radius_Lg}"/>
        <Setter Property="Padding" Value="{StaticResource DS_Thickness_6}"/>
        <Setter Property="Effect" Value="{StaticResource DS_Shadow_Sm}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource DS_CardHoverBrush}"/>
                <Setter Property="BorderBrush" Value="{StaticResource DS_BorderHoverBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Card with no padding (for content that fills the card) -->
    <Style x:Key="DS_Card_NoPadding" TargetType="Border" BasedOn="{StaticResource DS_Card}">
        <Setter Property="Padding" Value="0"/>
    </Style>

    <!-- Card with hover effect -->
    <Style x:Key="DS_Card_Hoverable" TargetType="Border" BasedOn="{StaticResource DS_Card}">
        <Setter Property="Cursor" Value="Hand"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Effect" Value="{StaticResource DS_Shadow_Md}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Interactive card (clickable) -->
    <Style x:Key="DS_Card_Interactive" TargetType="Border" BasedOn="{StaticResource DS_Card_Hoverable}">
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderBrush" Value="{StaticResource DS_PrimaryBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Card Header TextBlock Style -->
    <Style x:Key="DS_CardHeader" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource DS_FontSize_Lg}"/>
        <Setter Property="FontWeight" Value="{StaticResource DS_FontWeight_Semibold}"/>
        <Setter Property="Foreground" Value="{StaticResource DS_CardForegroundBrush}"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>

    <!-- Card Title TextBlock Style -->
    <Style x:Key="DS_CardTitle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource DS_FontSize_2xl}"/>
        <Setter Property="FontWeight" Value="{StaticResource DS_FontWeight_Bold}"/>
        <Setter Property="Foreground" Value="{StaticResource DS_CardForegroundBrush}"/>
        <Setter Property="Margin" Value="0,0,0,4"/>
    </Style>

    <!-- Card Description TextBlock Style -->
    <Style x:Key="DS_CardDescription" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource DS_FontSize_Sm}"/>
        <Setter Property="Foreground" Value="{StaticResource DS_ForegroundMutedBrush}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="LineHeight" Value="20"/>
    </Style>

    <!-- Card Footer Style -->
    <Style x:Key="DS_CardFooter" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="Margin" Value="0,12,0,0"/>
    </Style>

    <!-- Compact Card (smaller padding) -->
    <Style x:Key="DS_Card_Compact" TargetType="Border" BasedOn="{StaticResource DS_Card}">
        <Setter Property="Padding" Value="{StaticResource DS_Thickness_4}"/>
    </Style>

    <!-- Flat Card (no shadow) -->
    <Style x:Key="DS_Card_Flat" TargetType="Border" BasedOn="{StaticResource DS_Card}">
        <Setter Property="Effect" Value="{x:Null}"/>
    </Style>

</ResourceDictionary>
