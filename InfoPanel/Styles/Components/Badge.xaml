<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
    ========================================
    BADGE COMPONENT
    Small labels/tags for status and categories
    ========================================
    -->

    <!-- Base Badge Style -->
    <Style x:Key="DS_Badge" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource DS_PrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="{StaticResource DS_Radius_Full}"/>
        <Setter Property="Padding" Value="8,2"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Badge Text Style -->
    <Style x:Key="DS_BadgeText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource DS_FontSize_Xs}"/>
        <Setter Property="FontWeight" Value="{StaticResource DS_FontWeight_Medium}"/>
        <Setter Property="Foreground" Value="{StaticResource DS_PrimaryForegroundBrush}"/>
    </Style>

    <!-- Secondary Badge -->
    <Style x:Key="DS_Badge_Secondary" TargetType="Border" BasedOn="{StaticResource DS_Badge}">
        <Setter Property="Background" Value="{StaticResource DS_SecondaryBrush}"/>
    </Style>

    <!-- Destructive Badge -->
    <Style x:Key="DS_Badge_Destructive" TargetType="Border" BasedOn="{StaticResource DS_Badge}">
        <Setter Property="Background" Value="{StaticResource DS_DestructiveBrush}"/>
    </Style>

    <!-- Success Badge -->
    <Style x:Key="DS_Badge_Success" TargetType="Border" BasedOn="{StaticResource DS_Badge}">
        <Setter Property="Background" Value="{StaticResource DS_SuccessBrush}"/>
    </Style>

    <!-- Warning Badge -->
    <Style x:Key="DS_Badge_Warning" TargetType="Border" BasedOn="{StaticResource DS_Badge}">
        <Setter Property="Background" Value="{StaticResource DS_WarningBrush}"/>
    </Style>

    <!-- Outline Badge -->
    <Style x:Key="DS_Badge_Outline" TargetType="Border" BasedOn="{StaticResource DS_Badge}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="{StaticResource DS_BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

</ResourceDictionary>
