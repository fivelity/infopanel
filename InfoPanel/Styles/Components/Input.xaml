<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
    ========================================
    INPUT COMPONENT
    shadcn/ui style text inputs
    ========================================
    -->

    <!-- Base Input Style (TextBox) -->
    <Style x:Key="DS_Input" TargetType="TextBox">
        <Setter Property="Background" Value="#0A0A0A"/>
        <Setter Property="Foreground" Value="#EDEDED"/>
        <Setter Property="BorderBrush" Value="#1F1F1F"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="FontSize" Value="{StaticResource DS_FontSize_Sm}"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{StaticResource DS_Radius_Md}">
                        <ScrollViewer x:Name="PART_ContentHost"
                                    Margin="{TemplateBinding Padding}"
                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="#2E2E2E"/>
                        </Trigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="#3B82F6"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Small Input -->
    <Style x:Key="DS_Input_Sm" TargetType="TextBox" BasedOn="{StaticResource DS_Input}">
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="FontSize" Value="{StaticResource DS_FontSize_Xs}"/>
    </Style>

    <!-- Large Input -->
    <Style x:Key="DS_Input_Lg" TargetType="TextBox" BasedOn="{StaticResource DS_Input}">
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="FontSize" Value="{StaticResource DS_FontSize_Base}"/>
    </Style>

    <!-- Input Label -->
    <Style x:Key="DS_Label" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource DS_FontSize_Sm}"/>
        <Setter Property="FontWeight" Value="{StaticResource DS_FontWeight_Medium}"/>
        <Setter Property="Foreground" Value="#EDEDED"/>
        <Setter Property="Margin" Value="0,0,0,4"/>
    </Style>

    <!-- Input Description/Helper Text -->
    <Style x:Key="DS_InputDescription" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource DS_FontSize_Xs}"/>
        <Setter Property="Foreground" Value="#52525B"/>
        <Setter Property="Margin" Value="0,4,0,0"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

</ResourceDictionary>
